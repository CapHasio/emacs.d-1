;; Author: Chunyang Xu <mail@xuchunyang.me>
;; URL: https://github.com/xuchunyang/emacs.d
;; Created: 2017-02-24
;; Modified: 2017-02-24

;;; Commentary:

;; NOTE The shebang works on macOS since the argument is splited but
;; not on GNU/Linux, one cah use 'emacs --script /path/to/the/script'
;; instead.

;;; Code:

(message "%s" "Hello, world!")

(terpri)

(message "%s" "Current Environment:")
(let ((alist `((emacs-version . ,emacs-version )
               (lexical-binding . ,lexical-binding)
               (load-path . ,load-path)
               (exec-path . ,exec-path)
               (features . ,features))))
  (pp alist))

